<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_orange"
    android:orientation="vertical"
    tools:context=".Fragment.InformationFragments.StandardDrinkInfoFragment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/title_orange"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/StandardDrinkInfoSelectionTitle"
            android:textColor="@color/deepblue"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbarThumbVertical="@color/button"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/what_is_standard_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/blankTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="210sp"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:background="@drawable/textview_border5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    card_view:srcCompat="@drawable/ic_standard_drink2" />

                <TextView
                    android:id="@+id/fill1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="fill"
                    android:text=" "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="fill"
                    android:text="@string/StandardDrinkDefinition"
                    android:textColor="@color/deepblue"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/blankTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:background="@drawable/textview_border5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    card_view:srcCompat="@drawable/ic_wine_bottle" />

                <TextView
                    android:id="@+id/fill2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="fill"
                    android:text=" "
                    android:textColor="@color/background_gray" />

                <TextView
                    android:id="@+id/Text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="fill"
                    android:text="@string/StandardDrinkDefinition2"
                    android:textColor="@color/deepblue"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/blankTextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />


            <LinearLayout
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/textview_border5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/content3Title"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Text3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4sp"
                        android:layout_weight="0.9"
                        android:gravity="center|fill"
                        android:text="@string/StandardDrinkGuidanceTitle"
                        android:textColor="@color/deepblue"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fill3"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="fill"
                        android:text=" "
                        android:textColor="@color/background_gray" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="73dp"
                        android:layout_height="112dp"
                        android:layout_marginRight="8sp"
                        android:layout_marginBottom="200sp"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_guide" />

                </LinearLayout>

                <TextView
                    android:id="@+id/Text3Content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="0.9"
                    android:gravity="center|fill"
                    android:text="@string/StandardDrinkGuidanceContent"
                    android:textColor="@color/deepblue"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/gotoCalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"
                    android:backgroundTint="@color/title_orange"
                    android:text="Go To Standard Drink Calculator"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>