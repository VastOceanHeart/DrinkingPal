<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AlarmFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbarThumbVertical="@color/button"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Fragment.AlarmFragment">

            <TextView
                android:id="@+id/blankTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/dailyImageTitleLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dailyImageTitleBox"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/daily_image_image"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_image" />

                    <TextView
                        android:id="@+id/dailyImageTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8sp"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:text="@string/daily_image_title"
                        android:textColor="@color/deepblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/dailyImageContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginBottom="8sp"
                    android:src="@drawable/ic_image2" />

                <ImageButton
                    android:id="@+id/downloadImageButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8sp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_dowanload" />

            </LinearLayout>

            <TextView
                android:id="@+id/blankTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />


            <LinearLayout
                android:id="@+id/dailySentenceTitleLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dailySentenceTitleBox"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/daily_sentence_image"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_note" />

                    <TextView
                        android:id="@+id/dailySentenceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8sp"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:text="@string/daily_sentence_title"
                        android:textColor="@color/deepblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dailySentenceContentLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginBottom="6sp"
                    android:background="@drawable/textview_border3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dailySentenceContent"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="4sp"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:hint="@string/daily_sentence_hint"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_gray"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dailySentenceButtonLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginBottom="6sp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/hint_gray"
                        android:text="Clear"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/copyButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/hint_gray"
                        android:text="Copy"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/blankTextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/purpose_title"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/purpose_image"
                        android:layout_width="73dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8sp"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_guide" />

                    <TextView
                        android:id="@+id/the_purpose_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6sp"
                        android:layout_weight="0.9"
                        android:gravity="fill"
                        android:text="@string/purpose_title"
                        android:textColor="@color/deepblue"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/purpose_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:gravity="fill"
                    android:text="@string/purpose"
                    android:textColor="@color/deepblue"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/blankTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp"
                android:background="@drawable/textview_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/explain_title"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/explain_image"
                        android:layout_width="73dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8sp"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_tips" />

                    <TextView
                        android:id="@+id/the_explain_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6sp"
                        android:layout_weight="0.9"
                        android:gravity="fill"
                        android:text="@string/explain_title"
                        android:textColor="@color/deepblue"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/explain_drop_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        card_view:srcCompat="@drawable/ic_arrow_drop_down" />
                </LinearLayout>

                <TextView
                    android:id="@+id/explain_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:gravity="fill"
                    android:text="@string/explain"
                    android:textColor="@color/deepblue"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/blankTextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>