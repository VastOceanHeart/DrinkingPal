<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_orange"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@color/button"
    tools:context=".Fragment.InformationFragments.HangoverRemediesInfoFragment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/title_orange"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/HangoverRemedyInfoSelectionTitle2"
            android:textColor="@color/deepblue"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragment.InformationFragments.HangoverRemediesInfoFragment">

        <LinearLayout
            android:id="@+id/beforeDrinkTitle"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="120sp"
            android:layout_marginRight="30sp"
            android:background="@color/item_orange"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/beforeDrinkImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/before_drink" />

            <TextView
                android:id="@+id/beforeDrinkTitleText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/BeforeDrinkTitle"
                android:textColor="@color/deepblue"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/blankTextView1"
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="15sp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/afterDrinkTitle"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="@color/item_orange"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/afterDrinkImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/wine_background" />

            <TextView
                android:id="@+id/afterDrinkTitleText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/AfterDrinkTitle"
                android:textColor="@color/deepblue"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>