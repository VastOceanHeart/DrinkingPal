                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/blankTextView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FillWithBlankLine2" />

            <LinearLayout
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
