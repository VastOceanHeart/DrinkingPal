<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrinkingPal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#80FFFFFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/background_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--The theme for navigation drawer -->
    <style name="Theme.NavigationJava" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logo</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/background_gray</item>
        <item name="android:colorBackground">@color/background_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_navy_blue</item>
        <item name="colorSecondaryVariant">@color/navy_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Customize your theme here. -->
        <!--Launch page-->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">
            @color/background_orange
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @mipmap/drinkingpal_logo_autofix_round
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/launch_content
        </item>
        <item name="android:windowBackground" tools:targetApi="Q">@drawable/splash</item>

        <!--Put our team logo here
        <item name="android:windowSplashScreenBrandingImage"></item>-->
    </style>

    <!--The hamburger icon in Tool bar-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.NavigationJava.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--The style for time picker-->
    <style name="TimePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/deepblue</item>
        <item name="colorAccent">@color/title_orange</item>
    </style>

    <!--The style for time AlertDialog-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/title_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.NavigationJava.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationJava.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>