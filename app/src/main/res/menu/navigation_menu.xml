                android:checkableBehavior="single"
                android:enabled="true"
                android:visible="true">
                <item
                    android:id="@+id/nav_achievement_fragment"
                    android:icon="@drawable/ic_trophy"
                    android:title="@string/AchievementTitle" />
                <item
                    android:id="@+id/nav_onboarding_activity"
                    android:icon="@drawable/ic_onboarding"
                    android:title="@string/OnboardingTitle" />
            </group>
        </menu>
